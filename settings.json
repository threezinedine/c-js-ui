{
	"config": {
		"windows": {
			"cmake_tool": "Visual Studio 17 2022"
		},
		"linux": {
			"cmake_tool": "Unix Makefiles"
		},
		"neededCommands": ["cmake", "git"]
	},
	"projects": [
		{
			"name": "cju",
			"language": "C",
			"type": "library",
			"buildTypesConfig": {
				"debug": {
					"options": "-DCU_BUILD_EXAMPLES=ON -DCU_BUILD_SHARED=OFF -DCU_BUILD_STATIC=ON -DCU_BUILD_TESTS=ON"
				},
				"release": {
					"options": "-DCU_BUILD_EXAMPLES=ON -DCU_BUILD_SHARED=OFF -DCU_BUILD_STATIC=ON -DCU_BUILD_TESTS=ON"
				}
			},
			"executables": [
				{
					"name": "test",
					"linuxPath": "{{ BUILD_DIR }}/tests/CJUTests",
					"windowsPath": "{{ BUILD_DIR }}/tests/{{ BUILD_TYPE|capitalize }}/CJUTests.exe"
				},
				{
					"name": "console",
					"linuxPath": "{{ BUILD_DIR }}/examples/platforms/console",
					"windowsPath": "{{ BUILD_DIR }}/examples/platforms/{{ BUILD_TYPE|capitalize }}/console.exe"
				},
				{
					"name": "time",
					"linuxPath": "{{ BUILD_DIR }}/examples/platforms/time",
					"windowsPath": "{{ BUILD_DIR }}/examples/platforms/{{ BUILD_TYPE|capitalize }}/time.exe"
				},
				{
					"name": "logger",
					"linuxPath": "{{ BUILD_DIR }}/examples/core/logger",
					"windowsPath": "{{ BUILD_DIR }}/examples/core/{{ BUILD_TYPE|capitalize }}/logger.exe"
				},
				{
					"name": "memory",
					"linuxPath": "{{ BUILD_DIR }}/examples/platforms/memory",
					"windowsPath": "{{ BUILD_DIR }}/examples/platforms/{{ BUILD_TYPE|capitalize }}/memory.exe"
				},
				{
					"name": "override_memory",
					"linuxPath": "{{ BUILD_DIR }}/examples/platforms/override_memory",
					"windowsPath": "{{ BUILD_DIR }}/examples/platforms/{{ BUILD_TYPE|capitalize }}/override_memory.exe"
				},
				{
					"name": "window",
					"linuxPath": "{{ BUILD_DIR }}/examples/platforms/window",
					"windowsPath": "{{ BUILD_DIR }}/examples/platforms/{{ BUILD_TYPE|capitalize }}/window.exe"
				}
			]
		}
	]
}
